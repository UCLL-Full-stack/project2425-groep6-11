generator client {
  provider = "prismaClient-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  class   String
  level   Int      @default(0)
  power   Int      @default(0)
  mana    Int      @default(100)
  health  Int      @default(100)
  defense Int      @default(100)
  mountId Int      @unique
  mount   Mount    @relation(fields: [mountId], references: [id])
  weapons Weapon[]
  quests  Quest[]
}

model Mount {
  id        Int        @id @default(autoincrement())
  name      String
  speed     Int        @default(100)
  Character Character?
}

model Weapon {
  id          Int       @id @default(autoincrement())
  name        String
  type        String
  damage      Int       @default(10)
  quality     Int       @default(100)
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
}

model Quest {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  xp          Int
  character   Character[]
}
